<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:background="?attr/selectableItemBackground"
    android:backgroundTint="@color/color17"
    android:clickable="true">

    <TextView
        android:id="@+id/txNomeContatoStatus"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="nome contato"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toEndOf="@+id/cardImgContatoStatus"
        app:layout_constraintTop_toTopOf="@+id/cardImgContatoStatus" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardImgContatoStatus"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="10dp"
        android:background="#CD1B1B"
        android:backgroundTint="#E43333"
        app:cardCornerRadius="100dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>