<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layoutFotoPerfil"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/color17"
    tools:context=".ui.activity.FotoPerfilActivity"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="0dp"
    >

    <ImageView
        android:id="@+id/imgVisualizaFotoPerfil"
        android:layout_width="265dp"
        android:layout_height="265dp"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/contato_15" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/linearLayout"
        android:layout_width="260dp"
        android:layout_height="42dp"
        android:background="@color/color17"
        android:clipToPadding="true"
        android:dividerPadding="5dp"
        android:filterTouchesWhenObscured="false"
        android:fitsSystemWindows="false"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgVisualizaFotoPerfil">

        <ImageButton
            android:id="@+id/imageButton9"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_weight="2"
            android:background="@drawable/click_button"
            android:clickable="true"
            android:elevation="20dp"
            android:foregroundTint="#D33333"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imageButton7"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/foto_perfil_infor" />

        <ImageButton
            android:id="@+id/imageButton8"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_weight="2"
            android:background="@drawable/click_button"
            android:elevation="20dp"
            android:foregroundTint="#D33333"
            app:layout_constraintEnd_toStartOf="@+id/imageButton7"
            app:layout_constraintStart_toEndOf="@+id/imageButton5"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/foto_perfil_chamada" />

        <ImageButton
            android:id="@+id/imageButton7"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_weight="2"
            android:background="@drawable/click_button"
            android:elevation="20dp"
            android:foregroundTint="#D33333"
            app:layout_constraintEnd_toStartOf="@+id/imageButton9"
            app:layout_constraintStart_toEndOf="@+id/imageButton8"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/foto_perfil_video" />

        <ImageButton
            android:id="@+id/imageButton5"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_weight="2"
            android:background="@drawable/click_button"
            android:elevation="20dp"
            android:foregroundTint="#D33333"
            android:onClick="teste"
            app:layout_constraintEnd_toStartOf="@+id/imageButton8"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/foto_perfil_chat" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/txNomeContatoFotoPerfil"
        android:layout_width="0dp"
        android:layout_height="35dp"
        android:background="#40000000"
        android:gravity="center|left"
        android:paddingStart="10dp"
        android:text="TextView"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imgVisualizaFotoPerfil" />

</androidx.constraintlayout.widget.ConstraintLayout>